<div class="container">
  <br>
  <br>
  <h1 class="grand-title" style="text-align: center;"> <%= @location.name.upcase %></h1>
  <hr>
        <%= render 'pages/travelfilters' %>


      <div class="col">
       <div id="travel-render">
        <%= render 'location' %>
       </div>
      </div>
        <% if @locationfilter.empty? %>
      <div class="fill-page-empty">
         <br>
        <br>
            <p>No results have been found.</p>
            <br>
            <p> Please search again or reset filters</p>
            <br>
            <br>
            <h4> <%=link_to "Reset filters", location_path, class: "button-16" %></h4>
            <br>
          </div>

        <% end %>

    <br>
    <br>
    <% if current_user %>
    <%= link_to "Edit this location", edit_location_path(@location), method: :get   %>
    <br>
    <br>
    <%= link_to "Delete this location", @location, method: :delete %>
    <% end %>
  </div>


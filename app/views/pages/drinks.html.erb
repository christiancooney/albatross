<div class="container">
  <br>
  <h1 class="grand-title" style="text-align: center;"> DRINKS</h1>
  <hr>
  <div class="row">
    <%= render 'recipefilters' %>
    <div class="col">
      <div id="recipes">
        <%= render 'drinks', drinks: @drinks %>
        <% if @drinks.empty? %>
              <div class="fill-page-empty">
                 <br>
        <br>
            <p>No Drinks recipes have been found.</p>
            <br>
            <p> Please search again or reset filters</p>
            <br>
            <br>
            <h4> <%=link_to "Reset filters", recipes_drinks_path, class: "button-16" %></h4>
            <br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="pagy-bar">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

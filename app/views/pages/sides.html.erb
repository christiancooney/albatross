
 <div class="container">
 <br><h1 class="grand-title" style="text-align: center;">SIDES</h1>
<hr>

<div class="search-bar-travel dropup">
    <a class="dropdown-toggle dropup" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="fas fa-search"></i>
    </a>
      <ul class="dropdown-menu up-drop" >
        <li class="dropdown-item location-list" >  <%= simple_form_for :search, url: recipes_sides_path, method: :get do |f| %>
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search ingredients, etc..."></li>
        <% end %>
      </ul>
    <div class="ml-auto small-screen-menu-travel">
      <a class=" dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">Filters</a>
        <ul class="dropdown-menu" >

            <li class="dropdown-item location-list" ><%=link_to "Vegan", recipes_sides_path(filter: "Vegan"), class: "button-16", id: "#{"selected" if params[:filter] == "Vegan"}" %></li>
            <li class="dropdown-item location-list" ><%=link_to "Vegetarian", recipes_sides_path(filter: "Vegetarian"), class: "button-16", id: "#{"selected" if params[:filter] == "Vegetarian"}" %></li>
            <li class="dropdown-item location-list" ><%=link_to "Dairy Free", recipes_sides_path(filter: "Dairy Free"), class: "button-16", id: "#{"selected" if params[:filter] == "Dairy Free"}" %></li>
            <li class="dropdown-item location-list" ><%=link_to "Gluten Free", recipes_sides_path(filter: "Gluten Free"), class: "button-16", id: "#{"selected" if params[:filter] == "Gluten Free"}" %></li>
            <hr>
            <li class="dropdown-item location-list" ><%=link_to "Bread", recipes_sides_path(filter: "Bread"), class: "button-16", id: "#{"selected" if params[:filter] == "Bread"}" %></li>
            <li class="dropdown-item location-list" ><%=link_to "Brunch", recipes_sides_path(filter: "Brunch"), class: "button-16", id: "#{"selected" if params[:filter] == "Brunch"}" %></li>
            <li class="dropdown-item location-list" ><%=link_to "Seafood", recipes_sides_path(filter: "Seafood"), class: "button-16", id: "#{"selected" if params[:filter] == "Seafood"}" %></li>

            <hr>
            <li class="dropdown-item location-list" > <%=link_to "Reset filters", recipes_sides_path, class: "button-16" %></li>
            <li class="dropdown-item location-list" > <%=link_to "Back to all recipes", recipes_path, class: "button-16" %></li>

        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-auto filters-panel" data-controller="filter">
        <div class="search-and-filters">
          <%= turbo_frame_tag "travel" do %>
          <div class="filter-buttons-travel large-screen-menu">
            <br>
            <h6>Filters</h6>
            <hr>
           <ul>
            <li> <%=link_to "Vegan", recipes_sides_path(filter: "Vegan"), class: "button-16", id: "#{"selected" if params[:filter] == "Vegan"}" %></li>
            <li> <%=link_to "Vegetarian", recipes_sides_path(filter: "Vegetarian"), class: "button-16", id: "#{"selected" if params[:filter] == "Vegetarian"}" %></li>
            <li> <%=link_to "Dairy Free", recipes_sides_path(filter: "Dairy Free"), class: "button-16", id: "#{"selected" if params[:filter] == "Dairy Free"}" %></li>
            <li> <%=link_to "Gluten Free", recipes_sides_path(filter: "Gluten Free"), class: "button-16", id: "#{"selected" if params[:filter] == "Gluten Free"}" %></li>
            <hr>
            <li> <%=link_to "Bread", recipes_sides_path(filter: "Bread"), class: "button-16", id: "#{"selected" if params[:filter] == "Bread"}" %></li>
            <li> <%=link_to "Brunch", recipes_sides_path(filter: "Brunch"), class: "button-16", id: "#{"selected" if params[:filter] == "Brunch"}" %></li>
            <li> <%=link_to "Seafood", recipes_sides_path(filter: "Seafood"), class: "button-16", id: "#{"selected" if params[:filter] == "Seafood"}" %></li>

            <hr>
            <li>  <%=link_to "Reset filters", recipes_sides_path, class: "button-16" %></li>
            <li> <%=link_to "Back to all recipes", recipes_path, class: "button-16" %></li>

          </ul>
         </div>
       </div>
      </div>







  <div class="col">
   <div id="recipes">
    <%= render 'sides' %>
    <% if @sides.empty? %>
      <h2 style="margin: 10% auto;width:-moz-fit-content;width:fit-content;">No sides fit your search. Please try again</h2>
      <h4 style="margin: 10% auto;width:-moz-fit-content;width:fit-content;"> <%=link_to "Reset filters", recipes_sides_path, class: "button-16" %></h4>
    <% end %>
    </div>
  </div>
  <% end %>
  </div>

  <br>
</div>

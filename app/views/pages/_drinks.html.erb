<div class="d-flex destination">
      <% @drinks.order(date: :desc).each do |article| %>
        <div class="destination-cards">
           <%= link_to article_path(article), style: "text-decoration: none;" do %>
        <% if article.imagecover.attached? %>
          <%= image_tag article.imagecover %>
        <% end %>
        <div class="d-card-middle">
        </div>
          <div class="d-card-text">
            <h4> <%= article.title  %></h4>

                  <div class="d-flex justify-content-between italic-cards">
                  <% if article.drink_markers.to_s.include?("Juice") %>
            <h6>Juice</h6>
 <% elsif article.drink_markers.to_s.include?("Mocktail") %>
            <h6>Mocktail</h6>
            <% elsif article.drink_markers.to_s.include?("Cocktail") %>
            <h6>Cocktail</h6>
            <% elsif article.drink_markers.to_s.include?("Smoothie") %>
            <h6>Smoothie</h6>
                   <% elsif article.drink_markers.to_s.include?("Refreshing") %>
            <h6>Refreshing</h6>

            <% end %>

            <%# <p><%= article.date.to_formatted_s(:long) %>
         <p>by <%= article.author  %></p>
          </div>

          </div>
      </div>
      <% end %>
      <% end %>

      </div>

<div class="container">
  <br>
  <% if current_user %>
 <%= link_to new_article_path, style: "text-decoration: none;" do %>
      <button class="btn btn-light">New article</button>
      <% end %>
      <br>
<% end %>
  <h1 class="grand-title" style="text-align: center;"> ALL RECIPES</h1>
  <hr>

  <div class="row">
 <%= render 'recipefilters' %>
  <div class="col">
   <div id="recipes">

      <%= render 'recipe', recipes: @recipes %>
      <% if @recipes.empty? %>
      <div class="fill-page-empty">
         <br>
        <br>
            <p>No recipes have been found.</p>
            <br>
            <p> Please search again or reset filters</p>
            <br>
            <br>
            <h4> <%=link_to "Reset filters", recipes_path, class: "button-16" %></h4>
            <br>
          </div>      <% end %>
      </div>
    </div>
  </div>


</div>

<div class="container destinations">
<br>
  <div class="row">
    <div class="col-7">
      <div class="d-flex destination">
      <% @articles.each do |article| %>
        <div class="destination-cards">
           <%= link_to article_path(article), style: "text-decoration: none;" do %>
        <% if article.imagecover.attached? %>
          <%= image_tag article.imagecover %>
        <% end %>
        <div class="home-middle">
          <div class="home-text">
            <h5> <%= article.title  %></h5>
            <p><%= article.date.to_formatted_s(:long)   %></p>
            <p>by <%= article.author  %> </p>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
      </div>
    </div>
    <div class="col-4">
      <% @countries.each do |country| %>
      <ol style="list-style-type: none">
     <li class="country-list"><%= link_to country.name, country_path(country), :method => "get"  %></li>
     </ol>
     <hr>
      <ul style="list-style-type: square">
     <%  country.locations.each do |location| %>
     <li class="location-list" ><%= link_to location.name, location_path(location), :method => "get"  %></li>
        <% end %>
     <hr>

     </ul>
        <% end %>
    </div>

  </div>
</div>

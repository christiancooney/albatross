<div class="container print">
  <%= button_to 'Print', "#", :onclick => 'window.print();return false;'%>
  <%= link_to "Back to recipe", article_path %>
  <div id="<%= dom_id @article %>">
    <div class="print-card">
       <h1 class="grand-title"><%= @article.title %></h1>
        <hr>
      <% if @article.image1.attached? %>
      <%= image_tag @article.image1 %>
      <% end %>

      <%  if  @article.category == "Recipe" %>
      <div class="printcard">

    <div class="row">
     <div class="col-4 print-ingredients">
        <h4>Ingredients</h4>
        <%=simple_format @article.recipe_title1 %>
        <%=simple_format @article.recipe_list1 %>
        <%=simple_format @article.recipe_title2 %>
        <%=simple_format @article.recipe_list2 %>
        <%=simple_format @article.recipe_title3 %>
        <%=simple_format @article.recipe_list3 %>
        <%=simple_format @article.recipe_title4 %>
        <%=simple_format @article.recipe_list4 %>
        <%=simple_format @article.recipe_title5 %>
        <%=simple_format @article.recipe_list5 %>
        <%=simple_format @article.recipe_title6 %>
        <%=simple_format @article.recipe_list6 %>
      </div>

      <div class="col-6 print-method">
      <h4>Method</h4>
        <%= simple_format @article.method1 %>
        <%= simple_format @article.method2 %>
        <%= simple_format @article.method3 %>
        <%= simple_format @article.method4 %>
        <%= simple_format @article.method5 %>
        <%= simple_format @article.method6 %>
        <%= simple_format @article.method7 %>
        <%= simple_format @article.method8 %>
        <%= simple_format @article.method9 %>
        <%= simple_format @article.method10 %>
      </div>
    </div>

   </div>
    <% end %>
</div>
</div>
</div>

  </head>

  <body>
<% unless current_page? "/articles/#{params[:id]}/print" %>

  <%= render "shared/navbar" %>
<% end %>
<%= render "shared/flashes" %>
    <div class="main">
      <%= yield %>
    </div>
  <%= render "shared/footer" %>
  </body>
</html>
